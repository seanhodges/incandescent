<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".support.ReportDeviceActivity"
    tools:showIn="@layout/activity_report_device">

    <TextView
        android:id="@+id/report_device_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:text="@string/report_device_name"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/report_device_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        app:layout_constraintTop_toBottomOf="@id/report_device_name_label" />

    <TextView
        android:id="@+id/report_device_problem_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:text="@string/report_device_problem"
        app:layout_constraintTop_toBottomOf="@id/report_device_name" />

    <EditText
        android:id="@+id/report_device_problem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textMultiLine"
        app:layout_constraintTop_toBottomOf="@id/report_device_problem_label"/>

</androidx.constraintlayout.widget.ConstraintLayout>