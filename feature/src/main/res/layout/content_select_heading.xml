<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView android:id="@+id/room_image"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="2dp"
        android:baselineAlignBottom="true"
        android:scaleType="fitCenter"
        android:tint="@color/select_header_text"
        android:tintMode="src_in"
        tools:src="@drawable/room_lounge" />

    <TextView
        android:id="@+id/room_title"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_toRightOf="@id/room_image"
        android:paddingStart="5dp"
        android:textSize="18sp"
        android:textColor="@color/select_header_text"
        tools:text="Living room" />

</RelativeLayout>
